{
    "info": {
        "name": "Voting System API",
        "description": "Collection for testing the Voting System API routes",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Generate OTP for User Login",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/login/generate-otp",
                    "host": ["{{baseUrl}}"],
                    "path": ["login", "generate-otp"]
                },
                "body": {
                    "mode": "raw",
                    "raw": JSON.stringify({
                        "voterId": "123456",
                        "phoneNo": "9876543210"
                    })
                }
            }
        },
        {
            "name": "Login with OTP",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/login/otp",
                    "host": ["{{baseUrl}}"],
                    "path": ["login", "otp"]
                },
                "body": {
                    "mode": "raw",
                    "raw": JSON.stringify({
                        "voterId": "123456",
                        "otp": "654321"
                    })
                }
            }
        },
        {
            "name": "Cast Vote",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" },
                    { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/vote",
                    "host": ["{{baseUrl}}"],
                    "path": ["vote"]
                },
                "body": {
                    "mode": "raw",
                    "raw": JSON.stringify({
                        "partyId": "1"
                    })
                }
            }
        },
        {
            "name": "Get Party Page",
            "request": {
                "method": "GET",
                "header": [
                    { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/party/1",
                    "host": ["{{baseUrl}}"],
                    "path": ["party", "1"]
                }
            }
        },
        {
            "name": "Generate OTP for Election Officer",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/election-officer/login/generate-otp",
                    "host": ["{{baseUrl}}"],
                    "path": ["election-officer", "login", "generate-otp"]
                },
                "body": {
                    "mode": "raw",
                    "raw": JSON.stringify({
                        "electionOfficerId": "EO123",
                        "phoneNo": "9876543210"
                    })
                }
            }
        },
        {
            "name": "Login Election Officer",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/election-officer/login",
                    "host": ["{{baseUrl}}"],
                    "path": ["election-officer", "login"]
                },
                "body": {
                    "mode": "raw",
                    "raw": JSON.stringify({
                        "electionOfficerId": "EO123",
                        "password": "password123",
                        "otp": "654321"
                    })
                }
            }
        },
        {
            "name": "Count Votes by Region",
            "request": {
                "method": "GET",
                "header": [
                    { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/election-officer/votes/count/1",
                    "host": ["{{baseUrl}}"],
                    "path": ["election-officer", "votes", "count", "1"]
                }
            }
        },
        {
            "name": "Start Voting",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" },
                    { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "url": {
                    "raw": "{{baseUrl}}/election-officer/voting/start",
                    "host": ["{{baseUrl}}"],
                    "path": ["election-officer", "voting", "start"]
                },
                "body": {
                    "mode": "raw",
                    "raw": JSON.stringify({
                        "regionId": "1"
                    })
                }
            }
        }
    ]
}
